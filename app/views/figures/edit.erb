<h1>Edit figure</h1>

<form method="POST" action="/figures/<%= @figure.id %>">
<input id="hidden" type="hidden" name="_method" value="patch">
<label>Name: </label><input type="text" id="figure_name" name="figure[name]" value=<%=@figure.name%>/><br><br>
<h3>Titles</h3>
<% @titles.each do |title| %>
    <%= title.name %><input type='checkbox' value="<%= title.id %>" <%='checked' if @figure.titles.include?(title) == true %> id="title_<%= title.id %>" name="figure[title_ids][]"/><br>
<% end %><br>
<br>
<h3>Create a new title</h3>
<label>Name: </label><input type="text" name="title[name]" id="new_title"/><br>
<h2>Landmarks</h2>
<% @landmarks.each do |landmark| %>
    <%= landmark.name %><input type='checkbox' name='figure[landmark_ids][]' value="<%= landmark.id %>" <%='checked' if @figure.landmarks.include?(landmark) == true %> id="landmark_<%= landmark.id %>"/><br>
<% end %>
<h2>Create New Landmark:</h3>
<label>Name: </label><input type="text" name="landmark[name]" id="new_landmark"/>
<label>Year: </label><input type="text" name="landmark[year]" id="year"/>

<input type="submit" value="Edit Figure"/>
</form>
