<h2>Edit Historical Landmark</h2>

<form method="POST" action="/landmarks/<%= @landmark.id %>">
<input id="hidden" type="hidden" name="_method" value="patch">
    <label>Name: </label><input type="text" id="name" value="<%=@landmark.name%>" name="landmark[name]"/>
    <label>Year: </label><input type="text" id="year_completed" value="<%=@landmark.year_completed%>" name="landmark[year_completed]"/><br><br>
    <input type="submit" value="Edit Landmark"/>
</form>

<a class="button" href="/landmarks">Landmarks</a>
<a class="button" href="/">Home</a>
